{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@botmation/core": ["libs/core/src/index.ts"],
      "@botmation/instagram": ["libs/instagram/src/index.ts"],
      "@botmation/linkedin": ["libs/linkedin/src/index.ts"],
      "@botmation/twitter": ["libs/twitter/src/index.ts"],
      "@botmation/facebook": ["libs/facebook/src/index.ts"],
      "@botmation/reddit": ["libs/reddit/src/index.ts"],
      "@botmation/v2core": ["libs/v2core/src/index.ts"],
      "@botmation/puppeteer": ["libs/puppeteer/src/index.ts"],
      "@botmation/soundcloud": ["libs/soundcloud/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
