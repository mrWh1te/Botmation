{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "outDir": "./dist/core/",
    "module": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "assets",
    "scripts",
    "dist",
    "src/examples/**/*",
    "src/tests/**/*",
    "src/playground_bot*",
    "jest-puppeteer.config.js",
    "jest.config.js",
    "webpack.config.js"
  ],
  "include": [
    "src/botmation/**/*"
  ]
}
