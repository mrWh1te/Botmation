{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "outDir": "./build/",
    "module": "commonjs",
    "jsx": "react",
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "downlevelIteration": true
  },
  "exclude": [
    "assets",
    "scripts",
    "dist",
    "build",
    "node_modules",
    "jest-puppeteer.config.js",
    "jest.config.js",
    "webpack.config.js"
  ],
  "include": [
    "src/**/*"
  ]
}
